<% if @game.current_turn == @game.player_1 %>
<h2><%= @game.player_1.name%> has attacked <%=@game.opponent.name%> </h2>
<h2><%= @game.player_2.name %>'s turn next</h2>
<% else %>
<h2><%= @game.player_2.name %> has attacked <%=@game.player_1.name%></h2>
<h2><%= @game.player_1.name %>'s turn next</h2>
<% end %>
<h2><%=@game.player_1.name %> HP: <%= @game.player_1.health %></h2>
<h2><%=@game.player_2.name %> HP: <%= @game.player_2.health %></h2>

<form action="/switch_turns" method="post">
  <input type="submit" value="OK">
</form
